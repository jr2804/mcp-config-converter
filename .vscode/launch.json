{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "llm-check (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "llm-check"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {}
        },
        {
            "name": "convert (auto)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "convert",
                ".vscode/mcp.json",
                "-p",
                "opencode",
                "-pp",
                "auto"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "convert (ollama/gemma3)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "convert",
                ".vscode/mcp.json",
                "-p",
                "opencode",
                "-pp",
                "ollama",
                "--llm-model",
                "gemma3:latest"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "convert (mistral/perplexity)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "convert",
                ".vscode/mcp.json",
                "-p",
                "mistral",
                "-pp",
                "perplexity-sdk"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "version",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "version"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "convert --version",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "convert",
                "--version"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        }
    ]
}