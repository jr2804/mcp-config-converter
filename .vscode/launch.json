{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "llm-check (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "llm-check"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {}
        },
        {
            "name": "convert",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_config_converter",
            "args": [
                "convert",
                ".vscode/mcp.json",
                "-f",
                "opencode",
                "-pp",
                "auto"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        }
    ]
}